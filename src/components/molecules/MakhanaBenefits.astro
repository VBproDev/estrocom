---
import { Image } from "astro:assets";
import Text from "../atoms/Text.astro";
import Button from "../atoms/Button.astro";
import { colors } from "../../design-system/colors.js";
import makhana from "../../../public/assets/exported/makhana.png";
import ListItem from "./ListItem.astro";
---
<div
    class="benefit-card bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow"
>
    <div class="flex items-center mb-6">
        <div
            class="w-14 h-14 bg-amber-100 rounded-full flex items-center justify-center mr-4"
        >
            <Image
                src={makhana}
                alt="Makhana"
                width={500}
                height={500}
                class="object-cover"
            />
        </div>
        <Text type="h3" color={colors.dark}>Makhana Benefits</Text>
    </div>
    <ul class="space-y-4">
        <ListItem
            title="High in Protein"
            desc="Rich source of plant-based protein for muscle health and energy"
            color="green"
        />
        <ListItem
            title="Low in Calories"
            desc="Perfect guilt-free snack for weight management"
            color="green"
        />
        <ListItem
            title="Heart Healthy"
            desc="Low in sodium and cholesterol, supports cardiovascular health"
            color="green"
        />
        <ListItem
            title="Rich in Antioxidants"
            desc="Helps fight aging and boosts immunity"
            color="green"
        />
    </ul>
    <div class="mt-6">
        <a href="/category/makhana">
            <Button variant="secondary" className="w-full">
                Explore Makhana â†’
            </Button>
        </a>
    </div>
</div>
