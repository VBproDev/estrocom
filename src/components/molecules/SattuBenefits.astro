---
import Text from "../atoms/Text.astro";
import { colors } from "../../design-system/colors.js";
import sattu from "../../../public/assets/exported/sattu.webp";
import { Image } from "astro:assets";
import Button from "../atoms/Button.astro";
import ListItem from "./ListItem.astro";
---

<div
    class="benefit-card bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow"
>
    <div class="flex items-center mb-6">
        <div
            class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mr-4"
        >
            <Image
                src={sattu}
                alt="Sattu"
                width={500}
                height={500}
                class="object-cover"
            />
        </div>
        <Text type="h3" color={colors.dark}>Sattu Benefits</Text>
    </div>

    <ul class="space-y-4">
        <ListItem
            title="Complete Protein"
            desc="Contains all essential amino acids for optimal nutrition"
            color="amber"
        />
        <ListItem
            title="Natural Coolant"
            desc="Keeps body cool and hydrated, perfect for summers"
            color="amber"
        />
        <ListItem
            title="Digestive Health"
            desc="High in fiber, promotes gut health and regularity"
            color="amber"
        />
        <ListItem
            title="Energy Booster"
            desc="Sustained energy release, ideal for active lifestyles"
            color="amber"
        />
    </ul>

    <div class="mt-6">
        <a href="/category/sattu">
            <Button variant="secondary" className="w-full">
                Explore Sattu â†’
            </Button>
        </a>
    </div>
</div>
