---
/* =====================
   IMPORTS & ASSETS
   ===================== */
import Layout from "../layouts/Layout.astro";
import Hero from "../components/organisms/Hero.astro";
import { colors } from "../design-system/colors.js";
import Text from "../components/atoms/Text.astro";
import MakhanaBenefits from "../components/molecules/MakhanaBenefits.astro";
import SattuBenefits from "../components/molecules/SattuBenefits.astro";
import FeaturedProducts from "../components/organisms/FeaturedProducts.astro";
import Footer from "../components/organisms/Footer.astro";
import { Image } from "astro:assets";
import heroImage from "../../public/assets/shared/hero-banner.webp";
import CategoryCards from "../components/molecules/CategoryCards.astro";

const promises = [
  {
    icon: "üå±",
    title: "Farm-to-Table Transparency",
    text: `Know exactly where your food comes from. We work with verified
            farmers, ensuring fair wages and sustainable practices.`,
  },
  {
    icon: "üßÇ",
    title: "Nothing Added, Nothing Removed",
    text: `No preservatives and artificial colors. With the same purity your
            great-grandmother would approve of, because real food doesn't need
            a chemistry degree to understand.`,
  },
  {
    icon: "üõ°Ô∏è",
    title: "Your Wellness, Our Mission",
    text: `Every product is tested for quality and packed with care. We stand
            behind everything we sell. If it's not good enough for our family,
            it won't reach yours.`,
  },
];
---

<Layout title="Home">
  <!-- ===========================
       STRUCTURED DATA FOR SEO
       =========================== -->
  <Fragment slot="head">
    <!-- Google site verification, remove when you're deploying -->
    <meta
      name="google-site-verification"
      content="qfzcIgeEbwcAFbe9ubTMYGoEy7E_owtyBVKSl4Ie_OI"
    />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": ["WebSite", "OnlineStore"],
        "name": "Farmpure",
        "url": "https://www.farmpure.net/",
        "description": "Farmpure offers India's heritage of healthy and natural foods like Sattu and Makhana. Pure, sustainable, and packed with nutrition.",
        "inLanguage": "en-IN",
        "areaServed": "IN",
        "publisher": {
          "@type": "Organization",
          "name": "Farmpure",
          "url": "https://www.farmpure.net/",
          "logo": {
            "@type": "ImageObject",
            "url": "https://www.farmpure.net/assets/shared/logo.webp"
          },
          "sameAs": [
            "https://www.facebook.com/people/Farm-Pure/61566574773069/",
            "https://in.linkedin.com/company/slb-overseas-llp",
            "https://www.instagram.com/farmpureofficial/"
          ],
          "contactPoint": {
            "@type": "ContactPoint",
            "telephone": "+91-8700522344",
            "contactType": "Customer Service",
            "areaServed": "IN",
            "availableLanguage": "en"
          }
        },
        "mainEntity": {
          "@type": "WebPage",
          "@id": "https://www.farmpure.net/#home",
          "name": "Home",
          "about": [
            {
              "@type": "CollectionPage",
              "name": "Sattu Category",
              "description": "Explore Farmpure's Sattu range, traditional, protein-rich roasted gram products.",
              "url": "https://www.farmpure.net/category/sattu",
              "image": "https://www.farmpure.net/assets/exported/sattu.webp"
            },
            {
              "@type": "CollectionPage",
              "name": "Makhana Category",
              "description": "Shop our Makhana range, natural, healthy fox nuts packed with protein and antioxidants.",
              "url": "https://www.farmpure.net/category/makhana",
              "image": "https://www.farmpure.net/assets/exported/makhana.webp"
            }
          ],
          "primaryImageOfPage": {
            "@type": "ImageObject",
            "url": "https://www.farmpure.net/assets/shared/hero-banner.webp",
            "caption": "Assortment of traditional Indian superfoods including makhana and sattu"
          }
        }
      }
    </script>
  </Fragment>

  <!-- ===========================
       HERO SECTION
       =========================== -->
  <Hero>
    <div
      class="bg-gradient-to-br from-white to-green-50 overflow-hidden relative"
    >
      <div class="mx-auto max-w-7xl px-4 pt-6">
        <div class="grid items-center gap-12 md:grid-cols-2">
          <!-- Left: Hero Text Content -->
          <div class="flex flex-col text-center md:items-start md:text-left">
            <div class="inline-block">
              <span
                class="animate-pulse rounded-full bg-green-50 px-4 py-2 text-sm font-semibold text-green-700"
              >
                üå± Pure & Natural
              </span>
            </div>

            <Text
              type="h1"
              color={colors.dark}
              className="hero-title pt-4 pb-4 text-4xl font-bold leading-tight md:text-5xl lg:text-6xl"
            >
              India's Heritage,<br />
              <span
                class="bg-gradient-to-r from-green-500 to-amber-500 bg-clip-text text-transparent"
              >
                Your Health
              </span>
            </Text>

            <div class="flex justify-center md:justify-start">
              <Text
                type="body"
                color={colors.gray}
                className="max-w-xl text-lg leading-relaxed md:text-xl"
              >
                For generations, our grandmothers knew the secret to lasting
                health.
                <strong>At Farmpure</strong>, we're bringing back these
                time-tested treasures, sourced directly from farmers who still
                honor tradition, ensuring every bite connects you to India's
                wellness wisdom.
              </Text>
            </div>

            <CategoryCards />
          </div>

          <!-- Right: Hero Image -->
          <div class="flex justify-center md:justify-end">
            <Image
              src={heroImage}
              alt="Assortment of traditional Indian superfoods including makhana and sattu"
              class="max-w-full w-full object-contain drop-shadow-2xl transition-transform duration-500 hover:scale-105"
              width={750}
              height={750}
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>

    <!-- ===========================
       OUR STORY SECTION
       =========================== -->
    <section class="bg-white px-4 py-16" aria-labelledby="story-heading">
      <div class="mx-auto max-w-6xl">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2 md:order-1">
            <div class="space-y-6">
              <div class="inline-block">
                <span
                  class="text-sm font-semibold text-green-700 tracking-wide uppercase"
                >
                  Our Journey
                </span>
              </div>
              <Text
                type="h2"
                color={colors.dark}
                id="story-heading"
                className="text-3xl md:text-4xl font-bold leading-tight"
              >
                From Farm to Family, With Love
              </Text>
              <div class="space-y-4 text-gray-700 leading-relaxed">
                <p>
                  It started with a simple question: <em
                    class="text-green-700 italic font-medium"
                    >Why are the foods our ancestors thrived on disappearing
                    from our tables?</em
                  >
                </p>
                <p>
                  We watched as packaged snacks replaced sattu, and processed
                  foods pushed out makhana. So we set out on a mission, to
                  partner directly with farmers in Bihar and Madhya Pradesh,
                  ensuring they get fair prices while you get foods that are <strong
                    class="text-slate-900 font-semibold"
                    >100% pure, zero-compromise quality</strong
                  >.
                </p>
                <p>
                  Every product you receive has been carefully sourced, tested,
                  and packed with the same care we'd show our own families.
                  Because when you choose Farmpure, you're supporting
                  sustainable farming, preserving heritage, and choosing
                  wellness that's been trusted for centuries.
                </p>
              </div>
              <div class="flex flex-wrap gap-4 pt-4">
                <div class="flex items-center gap-2">
                  <span class="text-2xl">ü§ù</span>
                  <span class="text-sm font-medium text-gray-800"
                    >Direct from Farmers</span
                  >
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-2xl">üî¨</span>
                  <span class="text-sm font-medium text-gray-800"
                    >Lab-Tested Purity</span
                  >
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-2xl">üßÇ</span>
                  <span class="text-sm font-medium text-gray-800"
                    >Zero Additives</span
                  >
                </div>
              </div>
            </div>
          </div>
          <div class="order-1 md:order-2">
            <div
              class="bg-gradient-to-br from-green-50 to-amber-50 rounded-2xl p-8 shadow-lg"
            >
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-white rounded-xl p-6 text-center shadow-sm">
                  <div class="text-3xl font-bold text-green-600">500+</div>
                  <div class="text-sm text-gray-600 mt-2">
                    Farmers Partnered
                  </div>
                </div>
                <div class="bg-white rounded-xl p-6 text-center shadow-sm">
                  <div class="text-3xl font-bold text-amber-600">100%</div>
                  <div class="text-sm text-gray-600 mt-2">Natural & Pure</div>
                </div>
                <div class="bg-white rounded-xl p-6 text-center shadow-sm">
                  <div class="text-3xl font-bold text-emerald-600">10K+</div>
                  <div class="text-sm text-gray-600 mt-2">Happy Customers</div>
                </div>
                <div class="bg-white rounded-xl p-6 text-center shadow-sm">
                  <div class="text-3xl font-bold text-orange-600">3rd Gen</div>
                  <div class="text-sm text-gray-600 mt-2">Family Recipes</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured products section -->
    <FeaturedProducts />

    <!-- ===========================
       BENEFITS SECTION
       =========================== -->
    <section
      class="bg-gradient-to-b from-white to-gray-50 px-4 py-16"
      aria-labelledby="benefits-heading"
    >
      <div class="mx-auto max-w-6xl">
        <div class="mb-12 text-center">
          <Text
            type="h2"
            color={colors.dark}
            className="mb-3"
            id="benefits-heading"
          >
            Ancient Wisdom, Modern Benefits
          </Text>
          <Text type="body" color={colors.gray} className="mx-auto max-w-2xl">
            What our ancestors knew instinctively, science now confirms. These
            superfoods are nutritional powerhouses
          </Text>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <MakhanaBenefits />
          <SattuBenefits />
        </div>
      </div>
    </section>

    <!-- ===========================
       WHY CHOOSE US SECTION
       =========================== -->
    <section
      class="bg-gradient-to-br from-green-50 via-white to-amber-50 px-4 py-16"
      aria-labelledby="why-choose-heading"
    >
      <div class="mx-auto max-w-6xl">
        <div class="text-center mb-12">
          <Text
            type="h2"
            color={colors.dark}
            className="mb-3"
            id="why-choose-heading"
          >
            The Farmpure Promise
          </Text>
          <Text type="body" color={colors.gray} className="mx-auto max-w-2xl">
            We deliver trust, transparency, and tradition.
          </Text>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {
            promises.map(({ icon, title, text }) => (
              <div class="bg-white rounded-xl border border-gray-100 p-8 shadow-md transition-all duration-300 hover:-translate-y-1 hover:border-green-500 hover:shadow-xl">
                <div class="text-4xl mb-4">{icon}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">{title}</h3>
                <p class="text-gray-600 leading-relaxed">{text}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Footer -->
    <Footer />
  </Hero>
</Layout>
